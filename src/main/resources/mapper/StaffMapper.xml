  <select id="selectRole" resultMap="BaseResultMap">
    SELECT staff.*,role.*
    FROM staff
    LEFT JOIN st_ro
    ON staff.`st_id`=st_ro.`st_id`
    LEFT JOIN role
    ON st_ro.`ro_id`=role.`ro_id`
  </select>

  <!--查询所有或分页，傅-->
